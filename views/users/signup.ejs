<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="stylesheets/style.css">

<main class="signupBody">


    <div class="user_form form">
        <div class="container-sm">
            <div class="d-flex justify-content-center">
                <h1>Create a Profile</h1>
            </div>
            <div class="d-flex justify-content-center align-items-center">
                <div class="underline"></div>
            </div>
            <form action="/path" method="POST" class="row g-3 mt-3 needs-validation validated-form" novalidate>
                <div class="row g-3 section">
                    <label for="email" class="form-label col-4">Email</label>
                    <div class="col-md-8">
                        <input type="email" id="email" name="email" placeholder="username@email.com"
                            class="form-control" aria-label="Email" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter a valid email.
                        </div>
                    </div>
                </div>
                <div class="row g-3 section">
                    <label for="username" class="form-label col-sm">Username</label>
                    <div class="col-md-8">
                        <input type="username" name="username" id="username" placeholder="username" class="form-control"
                            aria-label="username" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter a username.
                        </div>
                    </div>
                </div>
                <div class="row g-3 section">
                    <label for="password" class="form-label col-sm">Password</label>
                    <div class="col-md-8">
                        <input type="password" id="password" name="password" placeholder="*********"
                            class="form-control" aria-label="password" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter a password.
                        </div>
                    </div>
                </div>
                <div class="col-12 mb-6 d-flex justify-content-end">
                    <button class="btn btn-primary btn--green">Create Profile</button>
                </div>

            </form>
        </div>
    </div>

</main>



<script src="/javascripts/validation.js"></script>