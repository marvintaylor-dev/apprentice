<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/list.css">

<div class="container d-flex justify-content-left mt-5">
    <h1>
        <%= field_of_study %> Mentors
    </h1>
</div>

<div class="container d-flex justify-content-left mt-5">
    <div class="mentorInformation">
        <ul>
            <% for (let user of users) {%>
            <% if(user.path){ %>
            <li><a class="mentorInformation__name" href="/explore/<%=user._id%>">
                    <%= user.name.first %>
                    <%= user.name.last %>
                </a>
                <span class="mentorInformation__jobTitle"><%= user.job_title %></span>
                <button id="profile_access"><a href="/restricted/<%=user._id%>">Restricted Access Profile</a></button>
            </li>
            <% } %>
            <% } %>
        </ul>
    </div>
</div>